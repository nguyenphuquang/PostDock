#!/usr/bin/env bash

echo ">>> Unregister the node if it was done before"

PGCONNECT_TIMEOUT=$CHECK_PGCONNECT_TIMEOUT PGPASSWORD=$REPLICATION_PASSWORD  psql -h $CURRENT_REPLICATION_PRIMARY_HOST -p $CURRENT_REPLICATION_PRIMARY_PORT -U $REPLICATION_USER  $REPLICATION_DB -c "DELETE FROM repmgr_$CLUSTER_NAME.repl_nodes WHERE conninfo LIKE '%host=$CLUSTER_NODE_NETWORK_NAME%'"
