#!/usr/bin/env bash
PGPASSWORD=$REPLICATION_PASSWORD psql --username "$REPLICATION_USER" -h $CURRENT_REPLICATION_PRIMARY_HOST -p $CURRENT_REPLICATION_PRIMARY_PORT -d $REPLICATION_DB -tAc "SELECT id FROM repmgr_$CLUSTER_NAME.repl_nodes WHERE conninfo LIKE '% host=$CURRENT_REPLICATION_PRIMARY_HOST%' LIMIT 1"
